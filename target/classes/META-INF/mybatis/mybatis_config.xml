<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<settings>
		<!-- 일부 데이터베이스 제품은 컬럼에 null값이 저장되는 경우, 해당 컬럼의 JDBC타입을 요구한다. 아래의 설정은 JDBC타 -->
		<setting name="jdbcTypeForNull" value="NULL" />
		<!-- 조회된 컬럼의 값이 Null인 경우라도 setter메소드나 Map의 put메소드를 호출하게 한다. resultType="hashmap"으로 
			설정할 경우 필요한 설정이다. * int, boolean 과 같은 기본자료형 타입의 변수인 경우 null값이 대입되지 않는 문제가 
			있다. -->
		<setting name="callSettersOnNulls" value="false" />
		<!-- 실행시키는 작업의 쿼리등을 보여준다. -->
		<!--  <setting name="logImpl" value="STDOUT_LOGGING"/>-->
	</settings>
	<typeAliases>
		<typeAlias type="kr.co.cms.vo.Employee" alias="Employee"/>
		<typeAlias type="kr.co.cms.vo.UserRole" alias="UserRole"/>
	</typeAliases>
	<mappers>
		<mapper resource="/META-INF/mybatis/mappers/employees.xml"/>
	</mappers>

</configuration>