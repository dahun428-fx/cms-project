<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
  
<tiles-definitions>
	<definition name="base" template="/WEB-INF/tiles/layout/template.jsp">
		<put-attribute name="css" value="/WEB-INF/tiles/resources_tiles/css.jsp" />
		<put-attribute name="script" value="/WEB-INF/tiles/resources_tiles/script.jsp" />
		<put-attribute name="header" value="/WEB-INF/tiles/common/header.jsp" />
		<put-attribute name="navi" value="/WEB-INF/tiles/common/navi.jsp" />
		<put-attribute name="footer" value="/WEB-INF/tiles/common/footer.jsp" />
	</definition>
	
	<definition name="*.page" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
    </definition>
 
     <definition name="*/*.page" extends="base">
         <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
     </definition>
    
    <definition name="*/*/*.page" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
    </definition>
    
    
    <!-- 메뉴 미표시 -->
    <definition name="baseEmpty" template="/WEB-INF/tiles/templateEmpty.jsp">
    </definition>
    
    <definition name="*.part" extends="baseEmpty">
        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
    </definition>
 
     <definition name="*/*.part" extends="baseEmpty">
         <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
     </definition>
    
    <definition name="*/*/*.part" extends="baseEmpty">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
    </definition>        
    
</tiles-definitions>