<?xml version="1.0" encoding="UTF-8"?>
<!-- security bean 생성 -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<security:http pattern="/resources/**" security="none"/>
	<!-- security 권한 설정 -->
	<security:http auto-config="true" use-expressions="true">
		<security:intercept-url pattern="/**" access="hasAnyRole('ROLE_ADMIN, ROLE_MASTER, ROLE_EMP')"/>
	</security:http>
	
	<bean id="passwordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />

	<bean class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />
	
	<bean id="customAuthProvider" class="kr.co.cms.security.CustomAuthenticationProvider"></bean>
	<security:authentication-manager>
		<security:authentication-provider ref="customAuthProvider"></security:authentication-provider>
	</security:authentication-manager>
